@model Config.Helpers.PaginatedList<Entities.Models.Age>
@using Booking.Models;
@{
    ViewData["Title"] = "Độ tuổi";

    string search = Context.Request.Query["search"].ToString();
    var queryParams = Config.Helpers.ParseQueryStringToDictionary.Parse(Context.Request);
}
<!--begin::Toolbar-->
<div class="toolbar py-4 py-lg-10" id="kt_toolbar">
    <!--begin::Container-->
    <div class="container-xxl d-flex flex-stack flex-wrap">
        <!--begin::Title-->
        <h3 class="text-white fw-bolder fs-1qx me-5">@Html.Raw(ViewData["Title"])</h3>
        <!--begin::Title-->
        <!--begin::Actions-->
        <div class="d-flex align-items-center flex-wrap py-2">
        </div>
        <!--end::Actions-->
    </div>
    <!--end::Container-->
</div>
<!--end::Toolbar-->
<!--begin::Container-->
<div class="d-flex flex-column-fluid align-items-start container-xxl">
    <!--begin::Post-->
    <div class="content flex-row-fluid">
        <partial name="Messages" />
        <!--begin::Card-->
        <div class="card">
            <!--begin::Card header-->
            <div class="card-header border-0 pt-6">
                <!--begin::Card title-->
                <div class="card-title">
                    <!--begin::Form-->
                    <form data-kt-search-element="form" class="search w-100 position-relative" autocomplete="off" asp-action="Index" method="get">
                        <!--begin::Search-->
                        <div class="d-flex align-items-center position-relative my-1">
                            <!--begin::Svg Icon-->
                            <span class="svg-icon svg-icon-1 position-absolute ms-6">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                                    <rect opacity="0.5" x="17.0365" y="15.1223" width="8.15546" height="2" rx="1" transform="rotate(45 17.0365 15.1223)" fill="currentColor"></rect>
                                    <path d="M11 19C6.55556 19 3 15.4444 3 11C3 6.55556 6.55556 3 11 3C15.4444 3 19 6.55556 19 11C19 15.4444 15.4444 19 11 19ZM11 5C7.53333 5 5 7.53333 5 11C5 14.4667 7.53333 17 11 17C14.4667 17 17 14.4667 17 11C17 7.53333 14.4667 5 11 5Z" fill="currentColor"></path>
                                </svg>
                            </span>
                            <!--end::Svg Icon-->
                            <input type="text" name="search" value="@search" class="form-control form-control-solid w-250px ps-14" placeholder="Từ khóa...">
                        </div>
                        <!--end::Search-->
                    </form>
                    <!--end::Form-->
                </div>
                <!--begin::Card title-->
                <!--begin::Card toolbar-->
                <div class="card-toolbar">
                    <!--begin::Toolbar-->
                    <div class="d-flex justify-content-end" data-kt-user-table-toolbar="base">
                        <!--begin::Add new-->
                        <a asp-action="Create" class="btn btn-primary data-partial-view" tooltip="Thêm mới">
                            <!--begin::Svg Icon-->
                            <span class="svg-icon svg-icon-2">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                                    <rect opacity="0.5" x="11.364" y="20.364" width="16" height="2" rx="1" transform="rotate(-90 11.364 20.364)" fill="currentColor"></rect>
                                    <rect x="4.36396" y="11.364" width="16" height="2" rx="1" fill="currentColor"></rect>
                                </svg>
                            </span> Thêm
                            <!--end::Svg Icon-->
                        </a>
                        <!--end::Add new-->
                    </div>
                    <!--end::Toolbar-->
                </div>
                <!--end::Card toolbar-->
            </div>
            <!--end::Card header-->
            <!--begin::Card body-->
            <div class="card-body py-4">
                <!--begin::Table-->
                <div class="dataTables_wrapper dt-bootstrap4 no-footer">
                    <div class="table-responsive">
                        <table class="table align-middle table-row-bordered table-row-dashed gy-5">
                            <!--begin::Table body-->
                            <tbody>
                                <!--begin::Table row-->
                                <tr class="text-start text-gray-800 fw-boldest fs-7 text-uppercase">
                                    <th class="min-w-200px px-0">@Html.DisplayNameFor(model => model.FirstOrDefault()!.Name)</th>
                                    <th class="min-w-125px">@Html.DisplayNameFor(model => model.FirstOrDefault()!.Status)</th>
                                    <th class="text-end pe-2 min-w-70px">Hành động</th>
                                </tr>
                                <!--end::Table row-->
                                @foreach (var item in Model)
                                {
                                    <!--begin::Table row-->
                                    <tr>
                                        <td class="pe-0">
                                            @Html.Raw(item.Name)
                                        </td>
                                        <td class="pe-0">
                                            @if (item.Status)
                                            {
                                                <span class="badge badge-light-success">Hiện</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-light-danger">Ẩn</span>
                                            }
                                        </td>
                                        <td class="text-end">
                                            <a href="#" class="btn btn-light btn-active-light-primary btn-sm" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
                                                Hành động
                                                <!--begin::Svg Icon -->
                                                <span class="svg-icon svg-icon-5 m-0">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                                                        <path d="M11.4343 12.7344L7.25 8.55005C6.83579 8.13583 6.16421 8.13584 5.75 8.55005C5.33579 8.96426 5.33579 9.63583 5.75 10.05L11.2929 15.5929C11.6834 15.9835 12.3166 15.9835 12.7071 15.5929L18.25 10.05C18.6642 9.63584 18.6642 8.96426 18.25 8.55005C17.8358 8.13584 17.1642 8.13584 16.75 8.55005L12.5657 12.7344C12.2533 13.0468 11.7467 13.0468 11.4343 12.7344Z" fill="currentColor"></path>
                                                    </svg>
                                                </span>
                                                <!--end::Svg Icon-->
                                            </a>
                                            <!--begin::Menu-->
                                            <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-bold fs-7 w-125px py-4" data-kt-menu="true" style="">
                                                <!--begin::Menu item-->
                                                <div class="menu-item px-3">
                                                    <a asp-action="Edit" tooltip="Sửa" asp-route-id="@item.ID" class="menu-link px-3 data-partial-view">Sửa</a>
                                                </div>
                                                <!--end::Menu item-->
                                                <!--begin::Menu item-->
                                                <div class="menu-item px-3">
                                                    <a asp-action="Delete" tooltip="Sửa" asp-route-id="@item.ID" class="menu-link px-3 data-partial-view">Xóa</a>
                                                </div>
                                                <!--end::Menu item-->
                                            </div>
                                            <!--end::Menu-->
                                        </td>
                                    </tr>
                                    <!--end::Table row-->
                                }
                            </tbody>
                            <!--end::Table body-->
                        </table>
                    </div>
                    <!--end::Table-->
                    <!--begin::Pagination-->
                    @(await Component.InvokeAsync<Booking.Components.NextPagination>(new PaginationViewModel { Results = Model, QueryParams = queryParams }))
                </div>
                <!--end::Table-->
            </div>
            <!--end::Card body-->
        </div>
        <!--end::Card-->
    </div>
    <!--end::Post-->
</div>
<!--end::Container-->
<!--begin::Placeholder modal CRUD-->
<div class="modal fade" id="placeholder-modal-crud" tabindex="-1" aria-modal="true" role="dialog">
    <div id="modal-dialog-crud"></div>
</div>
<!--end::Placeholder modal CRUD-->